<section class="stats" id="stats">
  <div class="container">
    <div id="live-feed"></div>
    <div class="grid grid-3 text-center my-4">
      <div class="card">
        <i class="fa fa-sitemap fa-3x"></i>
        <h3 class="text-primary hover-to-display">Players in Lobby</h3>
        <div class="hide">Count of all the current players connected to the server</div>
        <p class="text-secondary" id="numOfConnectedClients">
        </p>
      </div>
      <div class="card">
        <i class="fa fa-th-large fa-3x" style="color:white"></i>
        <h3 class="text-primary hover-to-display">Available Rooms Count</h3>
        <div class="hide">Available room is a room that is still waiting for more players to start the game
        </div>
        <p class="text-secondary" id="numAvailableRooms">
        </p>
      </div>
      <div class="card">
        <i class="fa fa-th-large fa-3x" style="color:green"></i>
        <h3 class="text-primary hover-to-display">Full Rooms Count</h3>
        <div class="hide">Full Room is a room that where the game is going on</div>
        <p class="text-secondary" id="numFullRooms">
        </p>
      </div>
    </div>

    <div class="grid grid-3 text-center my-4">
      <div class="card">
        <i class="fa fa-user-times fa-3x"></i>
        <h3 class="text-primary hover-to-display">Players Waiting in Lobby</h3>
        <div class="hide">Count of players waiting to create or join a room</div>
        <p class="text-secondary" id="membersStillInLobby">
        </p>
      </div>
      <div class="card">
        <i class="fa fa-users fa-3x" style="color:white"></i>
        <h3 class="text-primary hover-to-display">Players in Available Rooms</h3>
        <div class="hide">Count of players in available rooms waiting for the game to start</div>
        <p class="text-secondary" id="countOfPlayersAvailableRooms">
        </p>
      </div>
      <div class="card">
        <i class="fa fa-users fa-3x" style="color:green"></i>
        <h3 class="text-primary hover-to-display">Players in Full Rooms</h3>
        <div class="hide">Count of players in full rooms where the game is going on</div>
        <p class="text-secondary" id="countOfPlayersFullRooms">
        </p>
      </div>
    </div>
  </div>
</section>
<script src="/js/wsClient.js"></script>
